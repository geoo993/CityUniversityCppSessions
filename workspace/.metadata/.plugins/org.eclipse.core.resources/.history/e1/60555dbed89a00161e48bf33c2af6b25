#include <iostream>
using namespace std;

int main() {

	int i = 3;
	int j = 4;


	int &ref = i;
	int *pointer = &j; //reference is needed to refer to an Int, which in this case is reference to j

	*pointer = *pointer + 50;


	cout << "Ref: " << ref << endl;
	cout << "Pointer: " << *pointer << endl;//address of pointer
	cout << "Pointer Address: " << pointer << endl;//address of pointer

	return 0;
}
